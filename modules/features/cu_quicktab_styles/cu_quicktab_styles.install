<?php
/**
 * Change all quicktabs that are set to render as quicktabs to render as ui_tabs
 */
function cu_quicktab_styles_update_7001() {
  $updated = db_update('quicktabs')
    ->fields(array('renderer' => 'ui_tabs'))
    ->condition('renderer', 'quicktabs', '=')
    ->execute();

  return t('Updated !num quicktabs to ui_tabs renderer', array('!num' => $updated));
}
